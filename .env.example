# Environment Variables Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control

# ===========================
# SEC Parser Configuration
# ===========================

# sec-parser version (for reproducibility)
SEC_PARSER_VERSION=0.54.0

# ===========================
# Extraction Settings
# ===========================

# Enable extraction audit logging
ENABLE_AUDIT_LOGGING=true

# Enable golden dataset validation
ENABLE_GOLDEN_VALIDATION=false

# ===========================
# Model Configuration
# ===========================

# Hugging Face token (optional, for private models)
# HF_TOKEN=your_huggingface_token_here

# OpenAI API key (optional, for GPT-based analysis)
# OPENAI_API_KEY=your_openai_key_here

# ===========================
# Data Sources
# ===========================

# SEC EDGAR user agent (required for downloading filings)
# Format: "CompanyName ContactEmail"
# SEC_EDGAR_USER_AGENT="YourCompanyName contact@email.com"

# ===========================
# Database Configuration (if using)
# ===========================

# MongoDB connection string (optional)
# MONGODB_URI=mongodb://localhost:27017/sec_filings

# PostgreSQL connection (optional)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=sec_analysis
# POSTGRES_USER=your_username
# POSTGRES_PASSWORD=your_password

# ===========================
# MinIO / S3 Configuration (if using)
# ===========================

# MinIO endpoint (optional)
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=your_access_key
# MINIO_SECRET_KEY=your_secret_key
# MINIO_BUCKET=sec-filings

# ===========================
# Development Settings
# ===========================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================
# Paths (optional overrides)
# ===========================

# Custom data directory
# DATA_DIR=/path/to/data

# Custom models directory
# MODELS_DIR=/path/to/models

# Custom logs directory
# LOGS_DIR=/path/to/logs
